{
  "name": "yoga-napi",
  "version": "0.2.8",
  "description": "NAPI wrapper for Facebook's Yoga layout engine",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./src": {
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "license": "MIT",
  "author": "remorses",
  "repository": {
    "type": "git",
    "url": "https://github.com/remorses/yoga-napi"
  },
  "scripts": {
    "build:zig": "zig build -Doptimize=ReleaseFast",
    "build:zig:dev": "zig build",
    "build": "tsc -p tsconfig.build.json",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "bench": "bun run bench.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-types": "latest",
    "typescript": "^5.0.0",
    "yoga-layout": "^3.2.1"
  }
}
